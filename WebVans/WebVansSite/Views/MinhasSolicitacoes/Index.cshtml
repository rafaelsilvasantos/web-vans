@model WebVansSite.Models.ViewModels.MinhasSolicitacoesViewModel

@{
    ViewBag.Title = "Minhas Solicitações";
}

@if (Model.SolicitacoesFeitasPorMim != null && Model.SolicitacoesFeitasPorMim.Count() > 0)
{
    <div data-animation-effect="fadeInUpSmall" data-effect-delay="0">
        <p>
            Solicitações que fiz
        </p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Código
                        </th>
                        <th>
                            Data
                        </th>
                        <th>
                            Serviço
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Modelo
                        </th>
                        <th>
                            Cidade
                        </th>
                        <th>
                            Proprietário
                        </th>
                        <th>
                            Telefone
                        </th>
                        <th>
                            E-mail
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SolicitacoesFeitasPorMim)
                    {
                        <tr>
                            <td>
                                <a href="/MinhasSolicitacoes/Detalhes/@item.ID" title="Detalhes"><i class="fa fa-file-text pr-10"></i></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataSolicitacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoServico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CidadeEstado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeProprietario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TelefoneProprietario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailProprietario)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

