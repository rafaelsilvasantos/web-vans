@model WebVansSite.Models.ViewModels.ApagarVanViewModel

@{
    ViewBag.Title = "Apagar Van";
}
<h3>Deseja apagar essa Van?</h3>
<div class="gray-bg section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Marca)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Marca)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Modelo)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Modelo)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Ano)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Ano)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.CidadeEstado)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CidadeEstado)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Placa)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Placa)
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.TipoServico))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TipoServico)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TipoServico)
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.TipoLocomocao))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TipoLocomocao)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TipoLocomocao)
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.TipoCarga))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TipoCarga)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TipoCarga)
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.TipoVan))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TipoVan)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TipoVan)
                                    </dd>
                                }

                                <dt>
                                    @Html.DisplayNameFor(model => model.Observacoes)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Observacoes)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.DataCadastro)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DataCadastro)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Apagar" class="btn btn-default" />
                                    <a href="/MinhasVans" class="btn btn-primary">Voltar</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>